<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_rectangle">

    <TextView
        android:id="@+id/list_present_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/list_present_txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개최일"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_present_txt_title"
        android:layout_marginStart="9dp"/>

    <Button
        android:id="@+id/list_present_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_look"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:background="@drawable/btn_donating_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="95dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>